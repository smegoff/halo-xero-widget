
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Statement — <%= clientName %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      font-size: 11px;
      color: #111;
    }
    h1 {
      font-size: 18px;
      margin-bottom: 4px;
    }
    .meta {
      margin-bottom: 12px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 8px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 4px 6px;
    }
    th {
      background: #f5f5f5;
      text-align: left;
    }
    tfoot td {
      font-weight: bold;
    }
    .right {
      text-align: right;
    }
  </style>
</head>
<body>
  <h1>Statement — <%= clientName %></h1>
  <div class="meta">
    <div>Tenant: <%= tenantName || "Xero" %></div>
    <div>As at: <%= asAt %></div>
    <div>Account Balance: $<%= accountBal %></div>
    <div>Overdue Balance: $<%= overdueBal %></div>
  </div>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Number</th>
        <th>Due Date</th>
        <th class="right">Total ($)</th>
        <th class="right">Balance ($)</th>
      </tr>
    </thead>
    <tbody>
      <% rows.forEach(r => { %>
      <tr>
        <td><%= r.date %></td>
        <td><%= r.type %></td>
        <td><%= r.number %></td>
        <td><%= r.due %></td>
        <td class="right"><%= r.total %></td>
        <td class="right"><%= r.balance %></td>
      </tr>
      <% }) %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4">Totals</td>
        <td class="right">$<%= totalAmount %></td>
        <td class="right">$<%= totalBalance %></td>
      </tr>
    </tfoot>
  </table>
</body>
</html>
